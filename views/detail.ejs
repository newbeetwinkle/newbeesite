<% layout('boilerplate') -%>

<h1><%=post.title %></h1>
<span>作者：<%=post.author.nickname%></span> <img src=<%="http://www.gravatar.com/avatar/"+post.author.emailMd5 + "?s=25"%>>
<h5><label type="button" class="label label-primary">浏览数：<%=post.viewCount%></label>  </h5>

<ul class="post_list">
<li>
<div class="well">
<p>
<%=post.content %>
</p>
<time><%=post.createTime %></time>
</div>
</li>
</ul>
<% if(post.comments == undefined || post.comments.length == 0 ) {%>
    没人评论，快来抢沙发！
<% } else { %>
    <ul class="post_list">
        <%for(var i = 0; i<post.comments.length;i++){ %>
        <li>
            <div>
                <img src=<%="http://www.gravatar.com/avatar/"+post.author.emailMd5 + "?s=80"%>>
                <%=post.comments[i].user.nickname %> :
            </div>
            <div class="well">
                <p>
                    <%=post.comments[i].content %>
                </p>
                <time><%=post.comments[i].commentTime %></time>
            </div>
        </li>
        <%
        }
        %>
    </ul>
<% } %>

<div class="input-group">
    <input id="comment_input" type="text" class="form-control">
      <span class="input-group-btn">
        <button onclick="submit_comment(<%=post.postId%>);" class="btn btn-default" type="button">发表评论</button>
      </span>
</div>

<script src="/javascripts/detail_action.js"></script>



