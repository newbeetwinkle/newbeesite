<!DOCTYPE html>
<% layout('adminlayout') %>
<head>
       <style type="text/css">

       </style>
</head>
<table class="table table-bordered table-hover">
	<tr>
		<th>用户名</th>
		<th>昵称</th>
		<th>手机号</th>
		<th>地址</th>
		<th>电子邮箱</th>
		<th>操作</th>
	</tr>
		<% if (user.role == 0) { %>
			<% for(var i = 0 ; i < users.length ; i++) { %>
				<tr>
					<td><%= users[i].username%></td>
					<td><%= users[i].nickname%></td>
					<td><%= users[i].phone%></td>
					<td><%= users[i].address%></td>
					<td><%= users[i].email%></td>
					<td>
						<% if( users[i].username == user.username ) { %>
							<a class="btn btn-primary btn-sm" href="/admin/user/update?userId=<%=users[i]._id%>&type=password">修改密码</a>
						<% } else {%>
							<a class="btn btn-primary btn-sm" href="/admin/user/update?userId=<%=users[i]._id%>&type=normal">修改</a>
							<a class="btn btn-danger btn-sm" href="/admin/user/delete/<%=users[i]._id%>">删除</a>
						<% } %>												
					</td>
				<tr>
			<% } %>
		<% } else { 
			for( var i = 0 ; i < users.length ; i++) 
				if( users[i].username == user.username ) { %>
					<tr>
						<td><%= users[i].username%></td>
						<td><%= users[i].nickname%></td>
						<td><%= users[i].phone%></td>
						<td><%= users[i].address%></td>
						<td><%= users[i].email%></td>
						<td>
							<a class="btn btn-primary btn-sm" href="/admin/user/update/<%=users[i]._id%>">修改</a>
						</td>
					<tr>
				<% } 
		 } %>
</table>
